{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "copy-cat",
  "version": "0.1.0",
  "identifier": "com.copy-cat.org",
  
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "copy-cat",
        "decorations": false,
        "transparent": true, 
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "resizable": true,
        "fullscreen": false, 
        "visible": false,
        "maximized": false, 
        "width": 400,
        "height": 500, 
        "minWidth": 300,
        "focus": true,
        "theme":null        
      }
    ],
    "security": {
      "csp": null
    }
  },
  
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
